{
  "name": "link-shortener-service",
  "version": "1.0.0",
  "description": "Link shortener service",
  "main": "server.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "benchmark": "node benchmark.js"
  },
  "keywords": [
    "url-shortener",
    "link-shortener",
    "express",
    "nodejs",
    "api",
    "high-performance"
  ],
  "author": "Ore Akinwole",
  "license": "MIT",
  "dependencies": {
     "dotenv": "^10.0.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!benchmark.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
